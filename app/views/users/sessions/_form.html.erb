<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,t('sessions.email') %> <i class="fas fa-envelope"></i><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100' %>
  </div>

  <div class="field">
    <%= f.label :password ,t('sessions.password') %> <i class="fas fa-key"></i><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'w-100' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('sessions.login'), class:'btn btn-danger' %>
  </div>
<% end %>

<%= render "users/shared/links" %>